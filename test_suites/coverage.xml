<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Stand Alone - Stand Alone Regression Test Suite">

    <groups>
        <run>
            <include name="desktop-regression1"/>
        </run>
    </groups>

    <!-- Single Session -->
    <test name="Single Session" parallel="false" enabled="false">
        <classes>
            <class name="standAloneTests.PaginationTest"/>
        </classes>
    </test>

    <!-- Multiple Sessions -->
    <test name="Multiple Session" parallel="false" enabled="true">
        <classes>
            <class name="standAloneTests.AlertsTest"/>
            <class name="standAloneTests.DrawerTest"/>
        </classes>
    </test>

</suite>