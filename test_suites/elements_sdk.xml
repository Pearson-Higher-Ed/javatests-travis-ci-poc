<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Elements sdk V1 Test Suite" parallel="classes">

    <parameter name="runEnv" value="sauce"></parameter>
    <parameter name="travis" value="on"></parameter>

    <!-- For Desktop -->
    <parameter name="desktop" value="on"></parameter><!-- Set the tests to run Desktop -->
    <parameter name="platform" value="OS X 10.11"></parameter><!-- MAC or Windows -->
    <parameter name="sauceBrowser" value="chrome"></parameter><!-- browser on sauce machine, eg. safari, chrome, ie -->
    <parameter name="sauceBrowserVer" value="56.0"></parameter><!-- browser version on sauce machine -->
    <parameter name="localBrowser" value="chrome"></parameter><!-- browser on your local. eg firefox -->

    <!-- For Mobile -->
    <parameter name="mobile" value="off"></parameter><!-- set the tests to run on mobile devices -->
    <parameter name="appiumDriver" value="iOS"></parameter> <!-- appium driver - iosDriver or Android Driver -->
    <parameter name="mobDeviceName" value="iPhone 6 Plus"></parameter><!-- Android or iOS : iPhone 6 Plus/iPad Air/ iPad Pro -->
    <parameter name="mobilePlatformVer" value="9.3"></parameter><!-- mobile OS version -->
    <parameter name="mobBrowser" value="Safari"></parameter><!-- browser eg.safari, chrome -->
    <parameter name="appiumVer" value="1.6.3"></parameter><!-- version of appium on sauce -->

    <test name="Elements SDK V1 Tests">
        <groups>
            <run>
                <include name="desktop-ci"/>
            </run>
        </groups>
      <classes>
           <class name="elementsTests.TypographyTest"/>
           <class name="elementsTests.ResponsiveUtilitiesTest"/>
           <class name="elementsTests.TemplatesTest"/>
           <class name="elementsTests.GridTest"/>
           <class name="elementsTests.PresentationStrategyTest"/>
           <class name="elementsTests.ButtonsTest"/>
           <class name="elementsTests.InputsTest"/>
           <class name="elementsTests.IconsTest"/>
           <class name="elementsTests.FormsTest"/>
        </classes>
    </test>
</suite>

