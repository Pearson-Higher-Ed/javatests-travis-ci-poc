<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="ElementsSDK Test Suite">
    <groups>
        <run>
            <include name="desktop-regression"/>
        </run>
    </groups>
    <test name="ElementsSDK: Functional(JavaScript) Tests" parallel="classes" thread-count="9">
        <classes>
            <class name="elementsSDKTests.functionalTests.AlertsTest"/>
            <class name="elementsSDKTests.functionalTests.ButtonsTest"/>
            <class name="elementsSDKTests.functionalTests.DropdownTest"/>
            <class name="elementsSDKTests.functionalTests.FooterTest"/>
            <class name="elementsSDKTests.functionalTests.IconsTest"/>
            <class name="elementsSDKTests.functionalTests.InputsTest"/>
            <class name="elementsSDKTests.functionalTests.LoadingSpinnerTest"/>
            <class name="elementsSDKTests.functionalTests.TabsTest"/>
            <class name="elementsSDKTests.functionalTests.CalendarTest"/>
            <class name="elementsSDKTests.functionalTests.TablesTest"/>
        </classes>
    </test>
    <test name="ElementsSDK: Styles(CSS) Tests" parallel="classes" thread-count="6">
        <classes>
            <class name="elementsSDKTests.stylesTests.InputsTest"/>
            <class name="elementsSDKTests.stylesTests.TypographyTest"/>
            <class name="elementsSDKTests.stylesTests.ResponsiveUtilitiesTest"/>
            <class name="elementsSDKTests.stylesTests.ButtonsTest"/>
            <class name="elementsSDKTests.stylesTests.IconsTest"/>
            <class name="elementsSDKTests.stylesTests.FormsTest"/>
            <class name="elementsSDKTests.stylesTests.TablesTest"/>
        </classes>
    </test>
</suite>